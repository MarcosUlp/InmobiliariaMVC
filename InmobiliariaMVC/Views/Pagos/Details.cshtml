@model InmobiliariaMVC.Models.Pago

<h2>Detalles del Pago</h2>
<hr />

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.IdPago</dd>

    <dt class="col-sm-2">Contrato</dt>
    <dd class="col-sm-10">@Model.IdContrato</dd>

    <dt class="col-sm-2">Fecha de Pago</dt>
    <dd class="col-sm-10">@Model.FechaPago.ToShortDateString()</dd>

    <dt class="col-sm-2">Monto</dt>
    <dd class="col-sm-10">@Model.Monto</dd>

    <dt class="col-sm-2">Observaciones</dt>
    <dd class="col-sm-10">@Model.Observaciones</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.IdPago" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
