@model IEnumerable<InmobiliariaMVC.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
    bool disponibleActual = ViewBag.DisponibleActual ?? true;
}

<h1>Listado de Inmuebles (@(disponibleActual ? "Disponibles" : "No disponibles"))</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Inmueble</a>
</p>

<div class="mb-3">
    <a asp-action="Index" asp-route-disponible="true" class="btn btn-success">Ver Disponibles</a>
    <a asp-action="Index" asp-route-disponible="false" class="btn btn-secondary">Ver No Disponibles</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Dirección</th>
            <th>Uso</th>
            <th>Tipo</th>
            <th>Ambientes</th>
            <th>Precio</th>
            <th>Dueño</th>
            <th>Disponible</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Direccion</td>
            <td>@item.Uso</td>
            <td>@item.Tipo</td>
            <td>@item.Ambientes</td>
            <td>@item.Precio.ToString("C")</td>
            <td>@(item.Dueño.Nombre + " " + item.Dueño.Apellido)</td>
            <td>@(item.Disponible ? "Sí" : "No")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdInmueble">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdInmueble">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdInmueble">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
