@model InmobiliariaMVC.Models.Inmueble

@{
    ViewData["Title"] = "Editar Inmueble";
    var propietarios = (List<InmobiliariaMVC.Models.Propietario>)ViewBag.Propietarios;
}

<h1>Editar Inmueble</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="IdInmueble" />

            <!-- Propietario -->
            <div class="form-group">
                <label asp-for="IdPropietario" class="control-label"></label>
                <select class="form-control" asp-for="IdPropietario">
                    @foreach (var item in propietarios)
                    {
                        <option value="@item.IdPropietario" selected="@(item.IdPropietario == Model.IdPropietario)">
                            @(item.Nombre + " " + item.Apellido)
                        </option>
                    }
                </select>
                <span asp-validation-for="IdPropietario" class="text-danger"></span>
            </div>

            <!-- DirecciÃ³n -->
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <!-- Uso -->
            <div class="form-group">
                <label asp-for="Uso" class="control-label"></label>
                <input asp-for="Uso" class="form-control" />
                <span asp-validation-for="Uso" class="text-danger"></span>
            </div>

            <!-- Tipo -->
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <input asp-for="Tipo" class="form-control" />
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <!-- Ambientes -->
            <div class="form-group">
                <label asp-for="Ambientes" class="control-label"></label>
                <input asp-for="Ambientes" class="form-control" type="number" />
                <span asp-validation-for="Ambientes" class="text-danger"></span>
            </div>

            <!-- Superficie -->
            <div class="form-group">
                <label asp-for="Superficie" class="control-label"></label>
                <input asp-for="Superficie" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Superficie" class="text-danger"></span>
            </div>

            <!-- Precio -->
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <!-- Disponible -->
            <div class="form-group form-check">
                <input asp-for="Disponible" class="form-check-input" />
                <label asp-for="Disponible" class="form-check-label"></label>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
